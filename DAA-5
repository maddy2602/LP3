def print_board(board):
    for row in board:
        print(row)

def is_safe(board, row, col, n):
    # Check column
    for i in range(row):
        if board[i][col] == 1:
            return False

    # Check upper-left diagonal
    i, j = row - 1, col - 1
    while i >= 0 and j >= 0:
        if board[i][j] == 1:
            return False
        i, j = i - 1, j - 1

    # Check upper-right diagonal
    i, j = row - 1, col + 1
    while i >= 0 and j < n:
        if board[i][j] == 1:
            return False
        i, j = i - 1, j + 1

    return True

def solve(board, row, n):
    if row == n:  # All queens placed
        print("\nFinal N-Queen Matrix:")
        print_board(board)
        return True

    for col in range(n):
        if is_safe(board, row, col, n):
            board[row][col] = 1  # Place queen
            if solve(board, row + 1, n):  # Recur to next row
                return True
            board[row][col] = 0  # Backtrack

    return False

# Main Function
n = int(input("Enter N (size of board): "))
board = [[0] * n for _ in range(n)]

# First queen already placed at (0, 0)
board[0][1] = 1

# Now solve for remaining queens from row 1
if not solve(board, 1, n):
    print("No solution exists")
